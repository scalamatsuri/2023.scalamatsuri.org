{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./nuxt_src/*"],
      "@/*": ["./*"]
    },
    "types": ["@nuxt/types", "@types/node", "@types/jest", "@types/mocha"],
    "typeRoots": ["./types"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
